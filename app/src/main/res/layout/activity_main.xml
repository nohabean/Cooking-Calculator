<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="vertical"
        android:layout_gravity="center">

        <Button
            android:id="@+id/measurementConverter"
            android:layout_width="350dp"
            android:layout_height="115dp"
            app:layout_constraintBottom_toTopOf="@id/timeConverter"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:backgroundTint="@color/green"
            app:cornerRadius="10dp"
            android:text="MEASUREMENT CONVERTER"
            android:textSize="28dp"
            android:textStyle="bold"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/timeConverter"
            android:layout_width="350dp"
            android:layout_height="115dp"
            app:layout_constraintTop_toBottomOf="@id/measurementConverter"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:backgroundTint="@color/green"
            app:cornerRadius="10dp"
            android:text="COOK TIME CONVERTER"
            android:textSize="28dp"
            android:textStyle="bold"
            android:textColor="@color/black" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>